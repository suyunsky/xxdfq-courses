# 数据库配置 - 使用MySQL (pymysql驱动)
DATABASE_URL=mysql+pymysql://root:root2025@localhost/xxdfq_courses

# JWT配置
SECRET_KEY=your-secret-key-for-development-only-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7天

# 应用配置
DEBUG=True
ENVIRONMENT=development

# 视频服务配置
VIDEO_SERVICE_URL=https://video.example.com
VIDEO_SERVICE_TOKEN=your-video-service-token

# 邮件配置（用于发送验证邮件、重置密码等）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@xxdfq.com

# 文件存储配置
STORAGE_TYPE=local  # local, s3, cloudinary
STORAGE_PATH=./uploads

# 支付配置
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# 监控和日志
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log