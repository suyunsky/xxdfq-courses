# 数据库配置
DATABASE_URL=sqlite:///./xxdfq.db
# 或者使用MySQL
# DATABASE_URL=mysql+mysqlconnector://username:password@localhost/xxdfq

# JWT配置
SECRET_KEY=your-secret-key-for-development-only-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7天

# 应用配置
DEBUG=True
ENVIRONMENT=development

# 视频服务配置
VIDEO_SERVICE_URL=https://video.example.com
VIDEO_SERVICE_TOKEN=your-video-service-token

# 邮件配置（用于发送验证邮件、重置密码等）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@xxdfq.com

# 文件存储配置
STORAGE_TYPE=local  # local, s3, cloudinary
STORAGE_PATH=./uploads
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=xxdfq-bucket
AWS_REGION=us-east-1

# 支付配置
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
WECHAT_APP_ID=your-wechat-app-id
WECHAT_MCH_ID=your-wechat-mch-id
WECHAT_API_KEY=your-wechat-api-key

# 第三方服务
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# 腾讯云点播配置
TENCENT_SECRET_ID=your-tencent-secret-id
TENCENT_SECRET_KEY=your-tencent-secret-key
TENCENT_VOD_APP_ID=your-vod-app-id
TENCENT_VOD_REGION=ap-shanghai
TENCENT_VOD_DEFAULT_WATERMARK_ID=  # 可选：默认水印模板ID
TENCENT_VOD_DEFAULT_TRANSCODE_ID=  # 可选：默认转码模板ID
TENCENT_VOD_PLAY_DOMAIN=your-play-domain.com  # 播放域名

# 监控和日志
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
